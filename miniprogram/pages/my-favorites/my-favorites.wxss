/* pages/my-favorites/my-favorites.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部统计 */
.top-stats {
  background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 40rpx 30rpx;
  color: white;
}

.stats-content {
  display: flex;
  align-items: center;
}

.stats-icon {
  font-size: 80rpx;
  margin-right: 30rpx;
}

.stats-info {
  flex: 1;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background-color: white;
  padding: 20rpx 30rpx;
  margin: 0 30rpx 20rpx;
  border-radius: 12rpx;
  justify-content: space-between;
  align-items: center;
}

.sort-label {
  font-size: 28rpx;
  color: #666;
}

.sort-options {
  display: flex;
}

.sort-option {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.sort-option.active {
  background-color: #4CAF50;
  color: white;
}

/* 收藏列表 */
.favorite-list {
  padding: 0 30rpx;
}

.favorite-item {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.favorite-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.task-type {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.type-express {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.type-errand {
  background-color: #e3f2fd;
  color: #2196f3;
}

.type-shopping {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.favorite-time {
  font-size: 24rpx;
  color: #999;
}

.task-content {
  margin-bottom: 25rpx;
}

.task-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.task-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-details {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 25rpx;
}

.detail-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.detail-tag .tag-icon {
  margin-right: 5rpx;
}

/* 收藏操作栏 */
.favorite-actions {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.reward-info {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
}

.action-buttons {
  display: flex;
}

.favorite-btn {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.favorite-btn.unfavorite {
  background-color: white;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.favorite-btn.accept {
  background-color: #4CAF50;
  color: white;
}

.favorite-btn.disabled {
  background-color: #ccc;
  color: white;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.action-btn.accept {
  background: #4CAF50;
  color: #fff;
  border: none;
}

.action-btn.remove {
  background: #fff;
  color: #FF5722;
  border: 2rpx solid #FF5722;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 120rpx;
  color: #FF9800;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  background: #4CAF50;
  color: #fff;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 删除收藏按钮 */
.delete-favorite {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 24rpx;
}