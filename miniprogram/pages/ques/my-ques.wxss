/* pages/ques/my-ques.wxss */
.my-ques-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.ques-list {
  height: 100vh;
  padding: 20rpx;
}

.ques-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

/* 问题内容 */
.ques-content {
  margin-bottom: 20rpx;
}

.ques-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.ques-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.ques-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
}

/* 统计信息 */
.ques-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
}

.stats-right {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.stat-item .icon {
  font-size: 28rpx;
}

/* 操作按钮 */
.action-btns {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.delete-btn {
  background: #fff;
  color: #FF5722;
  border: 1rpx solid #FF5722;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
  gap: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-btn {
  padding: 20rpx 60rpx;
  background: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50rpx;
}
