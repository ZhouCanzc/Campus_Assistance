/* pages/profile/profile.wxss */
.profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 未登录状态特殊样式 */
.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-text {
  font-size: 60rpx;
  color: white;
}

.login-btn-small {
  background-color: #4CAF50;
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 25rpx;
  font-size: 26rpx;
}

/* 登录提示区域 */
.login-prompt {
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  border-radius: 20rpx;
  margin: 40rpx 30rpx;
  padding: 40rpx;
  color: white;
  text-align: center;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.prompt-desc {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 30rpx;
}

.prompt-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  color: #4CAF50;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 已登录状态样式 */
.user-card {
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  border-radius: 0 0 40rpx 40rpx;
  padding: 40rpx 30rpx;
  color: white;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-meta {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-id, .user-phone {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 用户统计 */
.user-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.stat-value {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  white-space: nowrap;
}

/* 统计卡片 */
.stats-card {
  background-color: white;
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-more {
  font-size: 26rpx;
  color: #4CAF50;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx;
}

.grid-count {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.grid-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单区域 */
.menu-section {
  background-color: white;
  border-radius: 20rpx;
  margin: 0 30rpx 30rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-extra {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #999;
}

/* 退出登录 */
.logout-section {
  margin: 0 30rpx;
}

.logout-btn {
  width: 100%;
  height: 110rpx;
  line-height: 70rpx;
  background-color: white;
  color: #e64340;
  border: 2rpx solid #e64340;
  border-radius: 40rpx;
  font-size: 40rpx;
}

/* 点击效果 */
.menu-item:active, .grid-item:active, .stat-item:active {
  opacity: 0.8;
}