.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
  border-bottom: 4rpx solid #4CAF50;
}

.demand-item {
  padding: 30rpx;
  margin: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}