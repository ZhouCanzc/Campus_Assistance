/*搜索区域*/
.search-section{
  display: flex;
  padding: 30rpx;
  background: #fafafa;
  margin-bottom: 20rpx;
  
}

/* 基础按钮样式 */
.search-btn {
  /* 尺寸 */
  width: 60rpx;
  height: 80rpx;
  padding: 20rpx 40rpx;
  
  /* 背景与边框 */
  background-color: #4CAF50;  /* 背景色 */
  border: none;              /* 去掉边框 */
  border-radius: 40rpx;      /* 圆角 */
  
  /* 文字 */
  color: white;              /* 文字颜色 */
  font-size: 28rpx;          /* 字体大小 */
  font-weight: bold;         /* 字体粗细 */
  
  /* 阴影与效果 */
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease; /* 过渡动画 */
}

/* 悬停/点击效果 */
.search-btn:active {
  transform: scale(0.98);     /* 点击时缩小 */
  box-shadow: 0 2rpx 6rpx rgba(76, 175, 80, 0.5);
}

.tab-bar {
  display: flex;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
}

