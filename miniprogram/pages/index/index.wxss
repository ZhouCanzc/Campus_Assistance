.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部横幅 */
.banner {
  background: linear-gradient(135deg, #93db80, #8ede1f);
  padding: 130rpx 280rpx;
  color: white;
  margin-bottom: 50rpx;
}

.banner-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

