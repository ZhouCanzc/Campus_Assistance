/* 服务网格 */
.service-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40rpx;
  padding: 0 0rpx;
}

.service-item {
  background: rgb(177, 246, 196);
  border-radius: 80rpx;
  padding: 5rpx 65rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(222, 247, 163, 0.08);
  transition: all 0.3s ease;
}

.service-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.12);
}

 .service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.service-icon.express {
  background-color: #89dda5;
}

.service-icon.buy {
  background-color: #4ECDC4;
}

.service-icon.urgent {
  background-color: #FFD166;
}

.service-icon.company {
  background-color: #6A89CC;
}

.service-icon.rent {
  background-color: #db85ef;
}

.service-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

