/* pages/my-publish/my-publish.wxss */
.my-publish-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 筛选区域 */
.filter-section {
  background-color: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-scroll {
  white-space: nowrap;
  height: 80rpx;
}

.filter-list {
  display: inline-flex;
  padding: 0 30rpx;
}

.filter-item {
  display: inline-block;
  padding: 20rpx 40rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background-color: #4CAF50;
  color: white;
}

.filter-item:last-child {
  margin-right: 0;
}

/* 订单列表 */
.order-list {
  padding: 30rpx;
}

/* 订单卡片 */
.order-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.order-status {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.order-status.pending {
  background-color: #ff9800;
  color: white;
}

.order-status.accepted {
  background-color: #2196f3;
  color: white;
}

.order-status.completed {
  background-color: #4CAF50;
  color: white;
}

.order-status.cancelled {
  background-color: #9e9e9e;
  color: white;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.order-detail {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.order-type {
  font-size: 26rpx;
  color: #666;
}

.order-reward {
  font-size: 26rpx;
  color: #ff5722;
  font-weight: bold;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 订单操作按钮 */
.order-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0;
}

.cancel-btn {
  background-color: white;
  color: #ff5722;
  border: 1rpx solid #ff5722;
}

.edit-btn {
  background-color: #4CAF50;
  color: white;
}

/* 接单人信息 */
.acceptor-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.acceptor-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.acceptor-name {
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 300rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}