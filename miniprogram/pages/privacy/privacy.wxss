/* pages/privacy/privacy.wxss */
.privacy-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.privacy-list {
  background-color: #fff;
  margin-top: 10px;
}

.privacy-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #eee;
}

.privacy-label {
  font-size: 16px;
  color: #333;
  width: 140px;
}

.privacy-desc {
  color: #999;
  font-size: 14px;
  margin-right: 10px;
  flex: 1;
  text-align: right;
}

.privacy-item icon {
  margin-left: 10px;
}