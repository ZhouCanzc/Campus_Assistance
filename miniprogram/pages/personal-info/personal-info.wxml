<!--pages/personal-info/personal-info.wxml-->
<view class="info-container">
  <!-- 信息列表 -->
  <view class="info-list">
    <!-- 头像 -->
    <view class="info-item" bindtap="onAvatarTap">
      <text class="info-label">头像</text>
      <view class="info-value avatar-value">
        <image src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="widthFix" class="avatar"></image>
        <icon type="right" size="16" color="#ccc"></icon>
      </view>
    </view>

    <!-- 名字 -->
    <view class="info-item" bindtap="onNameTap">
      <text class="info-label">名字</text>
      <view class="info-value">
        <text>{{userInfo.nickName || '未设置'}}</text>
        <icon type="right" size="16" color="#ccc"></icon>
      </view>
    </view>

    <!-- 学号 -->
    <view class="info-item" bindtap="onStuIdTap">
      <text class="info-label">学号</text>
      <view class="info-value">
        <text>{{userInfo.studentId || '未设置'}}</text>
        <icon type="right" size="16" color="#ccc"></icon>
      </view>
    </view>

    <!-- 手机号 -->
    <view class="info-item" bindtap="onPhoneTap">
      <text class="info-label">手机号</text>
      <view class="info-value">
        <text>{{userInfo.phone || '未绑定'}}</text>
        <icon type="right" size="16" color="#ccc"></icon>
      </view>
    </view>

    <!-- 宿舍地址 -->
    <view class="info-item" bindtap="onDormitoryTap">
      <text class="info-label">宿舍地址</text>
      <view class="info-value">
        <text>{{userInfo.dormitory || '未设置'}}</text>
        <icon type="right" size="16" color="#ccc"></icon>
      </view>
    </view>

  </view>
</view>