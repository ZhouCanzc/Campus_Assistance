/* pages/login/login.wxss */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.form-section {
  background-color: white;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.input-group {
  margin-bottom: 60rpx;
}

.input-item {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  transition: border-color 0.3s;
}

.input-field:focus {
  border-color: #4CAF50;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 90rpx;
  border: none;
  margin-bottom: 40rpx;
  transition: all 0.3s;
}

.login-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.login-btn[disabled] {
  opacity: 0.6;
  transform: none;
}

.mode-switch {
  text-align: center;
  font-size: 28rpx;
  color: #4CAF50;
  margin-bottom: 50rpx;
  padding: 15rpx;
}

.mode-switch:active {
  opacity: 0.8;
}

.quick-login {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.quick-title {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.quick-accounts {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.quick-account {
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}

.quick-account:active {
  background-color: #e0e0e0;
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: auto;
  padding-top: 40rpx;
}

.agreement-link {
  color: white;
  text-decoration: underline;
}