<!--pages/account-security/device-manage.wxml-->
<view class="device-container">
  <view class="tips">
    为了您的账号安全，建议及时移除不常用设备
  </view>
  
  <view class="device-list">
    <view class="device-item" wx:for="{{devices}}" wx:key="index">
      <view class="device-info">
        <view class="device-name">{{item.name}}</view>
        <view class="device-detail">
          <text>{{item.system}}</text>
          <text>{{item.loginTime}}</text>
        </view>
      </view>
      
      <view class="device-operation">
        <text wx:if="{{item.isCurrent}}" class="current-tag">当前设备</text>
        <button 
          wx:else 
          class="remove-btn" 
          bindtap="removeDevice" 
          data-index="{{index}}"
        >
          移除
        </button>
      </view>
    </view>
  </view>
</view>