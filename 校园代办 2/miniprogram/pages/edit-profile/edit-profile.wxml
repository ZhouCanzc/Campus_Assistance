<!-- pages/edit-profile/edit-profile.wxml -->
<view class="edit-profile-page">
  <!-- 头像编辑 -->
  <view class="avatar-section">
    <view class="section-title">头像</view>
    <view class="avatar-wrapper" bindtap="chooseAvatar">
      <image class="avatar" src="{{avatarUrl || '/images/default-avatar.png'}}"></image>
      <view class="avatar-edit">
        <text class="edit-text">点击更换</text>
      </view>
    </view>
  </view>

  <!-- 基本信息表单 -->
  <view class="form-section">
    <view class="section-title">基本信息</view>
    
    <view class="form-item">
      <view class="form-label">昵称</view>
      <input 
        class="form-input" 
        placeholder="请输入昵称" 
        value="{{nickName}}"
        bindinput="onNickNameChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">学号</view>
      <input 
        class="form-input" 
        placeholder="请输入学号" 
        value="{{studentId}}"
        bindinput="onStudentIdChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">手机号</view>
      <input 
        class="form-input" 
        type="number"
        placeholder="请输入手机号" 
        value="{{phone}}"
        bindinput="onPhoneChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">宿舍地址</view>
      <input 
        class="form-input" 
        placeholder="请输入宿舍地址，如：东区1栋101" 
        value="{{dormitory}}"
        bindinput="onDormitoryChange"
      />
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="save-section">
    <button class="save-btn" bindtap="saveProfile" loading="{{isSaving}}">
      保存修改
    </button>
  </view>
</view>