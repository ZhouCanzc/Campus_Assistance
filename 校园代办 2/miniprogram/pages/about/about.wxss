/* pages/about/about.wxss */
.about-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 应用信息 */
.app-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx 40rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a450 100%);
  color: white;
  border-radius: 0 0 40rpx 40rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
  background-color: white;
  padding: 20rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.app-version {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 功能介绍 */
.features-section {
  background-color: white;
  margin: 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.feature-icon {
  font-size: 70rpx;
  margin-bottom: 20rpx;
  color: #07c160;
}

.feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 团队介绍 */
.team-section {
  background-color: white;
  margin: 0 30rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.team-members {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.member-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 30rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
}

.member-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #ddd;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-role {
  font-size: 26rpx;
  color: #07c160;
  margin-bottom: 15rpx;
}

.member-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 联系方式 */
.contact-section {
  background-color: white;
  margin: 0 30rpx 30rpx;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.contact-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #f9f9f9;
  border-radius: 15rpx;
  transition: background-color 0.3s;
}

.contact-item:active {
  background-color: #f0f0f0;
}

.contact-icon {
  font-size: 50rpx;
  margin-right: 30rpx;
  color: #07c160;
}

.contact-info {
  flex: 1;
}

.contact-type {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.contact-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.copy-btn, .call-btn, .map-btn {
  font-size: 26rpx;
  color: #07c160;
  padding: 10rpx 20rpx;
  border: 1rpx solid #07c160;
  border-radius: 8rpx;
}

/* 版权信息 */
.copyright-section {
  text-align: center;
  margin: 30rpx;
}

.copyright-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 30rpx;
  margin: 0 30rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.share-btn {
  background-color: #07c160;
  color: white;
}

.rate-btn {
  background-color: white;
  color: #07c160;
  border: 1rpx solid #07c160;
}

.action-btn::after {
  border: none;
}