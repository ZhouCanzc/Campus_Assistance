/* pages/login/login.wxss */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
}

.logo-section {
  text-align: center;
  margin-bottom: 64rpx;
  margin-top: 32rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.form-section {
  background-color: white;
  border-radius: 30rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  box-sizing: border-box;
  width: 100%;
  max-width: 880rpx;
  margin: 0 auto;
}

.input-group {
  margin-bottom: 60rpx;
}

.input-item {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input-field {
  width: 99%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  transition: border-color 0.3s;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #4CAF50;
}

.login-btn {
  width: 100%;
  height: 92rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2196F3 100%);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 40rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}

.login-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.login-btn[disabled] {
  opacity: 0.6;
  transform: none;
}

.mode-switch {
  text-align: center;
  font-size: 28rpx;
  color: #4CAF50;
  margin-bottom: 50rpx;
  padding: 15rpx;
}

.mode-switch:active {
  opacity: 0.8;
}

.wechat-login {
  margin-bottom: 40rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #eee;
}

.divider-text {
  margin: 0 16rpx;
  font-size: 24rpx;
  color: #999;
}

.wechat-btn {
  width: 100%;
  height: 90rpx;
  background: #07c160;
  color: #fff;
  border-radius: 45rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.wechat-btn[disabled] {
  opacity: 0.7;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  margin-right: 18rpx;
}

.wechat-btn-text {
  letter-spacing: 2rpx;
}

.wechat-tips {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #888;
  margin-top: 16rpx;
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: auto;
  padding-top: 40rpx;
}

.agreement-link {
  color: white;
  text-decoration: underline;
}
