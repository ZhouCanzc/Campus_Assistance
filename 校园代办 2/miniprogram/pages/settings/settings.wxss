/* pages/settings/settings.wxss */
.settings-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 设置区块 */
.settings-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 30rpx 20rpx;
}

/* 设置项 */
.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.settings-item:first-child {
  border-top: none;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.item-text {
  font-size: 32rpx;
  color: #333;
}

.item-arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 20rpx;
}

.item-right {
  display: flex;
  align-items: center;
}

.cache-size {
  font-size: 26rpx;
  color: #999;
  margin-right: 20rpx;
}

.version-tag {
  font-size: 26rpx;
  color: #07c160;
  margin-right: 20rpx;
}

/* 开关项 */
.switch-item {
  padding-right: 20rpx;
}

/* 退出登录 */
.logout-section {
  margin: 50rpx 30rpx;
}

.logout-btn {
  width: 100%;
  background-color: white;
  color: #e64340;
  border: 1rpx solid #e64340;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.logout-btn::after {
  border: none;
}