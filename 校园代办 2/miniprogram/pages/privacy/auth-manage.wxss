/*pages/privacy/auth-manage.wxss*/
.authm-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.authm-list {
  background-color: #fff;
  margin-top: 10px;
}

.authm-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid #eee;
}

.authm-label {
  font-size: 16px;
  color: #333;
}

/* 开关样式 */
switch {
  transform: scale(0.9); 
}

/* 禁用状态样式 */
.auth-item[disabled]  {
  color: #ccc;
}