/* pages/ques/ques-detail.wxss */
.detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.content-area {
  height: calc(100vh - 120rpx);
}

/* 问题详情 */
.ques-detail {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #e0e0e0;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
}

.ques-content {
  margin-bottom: 30rpx;
}

.ques-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  display: block;
  margin-bottom: 30rpx;
}

.ques-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}

.ques-img {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.stats-bar {
  display: flex;
  align-items: center;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.stat-item .icon {
  font-size: 32rpx;
}

/* 评论区 */
.comment-section {
  background: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background: #e0e0e0;
}

.comment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.comment-user {
  font-size: 26rpx;
  color: #666;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.empty-comment {
  text-align: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}

.comment-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 24rpx;
  height: 64rpx;
}

.comment-input .input {
  height: 100%;
  font-size: 28rpx;
}

.action-btns {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

.action-btn .icon {
  font-size: 36rpx;
}

.action-btn.liked {
  color: #FF5722;
}
