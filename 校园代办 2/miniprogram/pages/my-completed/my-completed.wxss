/* pages/my-completed/my-completed.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 成就卡片 */
.achievement-card {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  border-radius: 0;
  margin: 0;
  padding: 40rpx 30rpx;
  color: white;
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.achievement-badge {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 80rpx;
  opacity: 0.3;
}

.achievement-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.achievement-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 30rpx;
}

.achievement-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  white-space: nowrap;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  white-space: nowrap;
}

/* 筛选选项卡 */
.filter-tabs {
  display: flex;
  background-color: white;
  margin: 0;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #666;
  background-color: #f9f9f9;
}

.filter-tab.active {
  background-color: white;
  color: #4CAF50;
  font-weight: bold;
  position: relative;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #4CAF50;
  border-radius: 2rpx;
}

/* 任务列表 */
.completed-list {
  padding: 0 30rpx;
}

.completed-item {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.completion-time {
  font-size: 24rpx;
  color: #4CAF50;
  font-weight: bold;
}

.task-details {
  margin-bottom: 25rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.detail-label {
  color: #666;
  min-width: 120rpx;
}

.detail-value {
  color: #333;
  flex: 1;
}

/* 参与方信息 */
.participants {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
}

.participant {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.participant:last-child {
  margin-bottom: 0;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.participant-info {
  flex: 1;
}

.participant-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.participant-role {
  font-size: 24rpx;
  color: #666;
}

.participant-rating {
  font-size: 24rpx;
  color: #ff9800;
}

/* 评价和奖励 */
.review-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.reward-amount {
  font-size: 32rpx;
  color: #ff9800;
  font-weight: bold;
}

.review-status {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.reviewed {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.not-reviewed {
  background-color: #fff3cd;
  color: #856404;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-btn.primary {
  background-color: #4CAF50;
  color: white;
}

.action-btn.secondary {
  background-color: white;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

/* 任务列表 */
.task-list {
  padding: 0 30rpx;
  height: calc(100vh - 400rpx);
}

.task-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.task-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-type {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #e8f5e9;
  color: #4CAF50;
  margin-right: 16rpx;
}

.task-role {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #e3f2fd;
  color: #2196F3;
  margin-right: auto;
}

.task-reward {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF5722;
}

.task-content {
  padding: 10rpx 0;
}

.task-info {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.task-partner {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.task-rating {
  font-size: 26rpx;
  color: #FF9800;
}

.task-comment {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.task-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.task-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn.view {
  background: #4CAF50;
  color: #fff;
  border: none;
}

.action-btn.rate {
  background: #FF9800;
  color: #fff;
  border: none;
}

.action-btn.rated {
  background: #f5f5f5;
  color: #999;
  border: none;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-buttons {
  display: flex;
  gap: 20rpx;
}

.empty-btn {
  background: #4CAF50;
  color: #fff;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.empty-btn.secondary {
  background: #fff;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
}