/**index.wxss**/

page {
  background: #f6f9fb;
}

.page {
  min-height: 100vh;
  padding: 40rpx 32rpx 60rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  box-sizing: border-box;
}

/* 顶部主视觉区域 */
.hero {
  background: linear-gradient(145deg, #23c07a, #0ca8a8);
  color: #ffffff;
  border-radius: 28rpx;
  padding: 38rpx;
  box-shadow: 0 18rpx 38rpx rgba(19, 172, 126, 0.22);
}

.hero__head {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hero__badge {
  align-self: flex-start;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.16);
  font-size: 22rpx;
}

.hero__title {
  font-size: 44rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.hero__subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.5;
}

.hero__stats {
  margin-top: 30rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.14);
  border-radius: 18rpx;
  padding: 18rpx 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.26);
}

.stat-number {
  font-size: 38rpx;
  font-weight: 700;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.92;
}

/* 分区标题与描述 */
.section-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2a44;
}

.section-desc {
  font-size: 24rpx;
  color: #6d7b8a;
}

/* 服务卡片列表 */
.service-grid {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.service-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 24rpx;
  border-radius: 22rpx;
  box-shadow: 0 12rpx 28rpx rgba(31, 42, 68, 0.06);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.service-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 18rpx rgba(31, 42, 68, 0.05);
}

.service-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 700;
  flex-shrink: 0;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.service-info {
  margin-left: 22rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.service-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2a44;
}

.service-desc {
  font-size: 24rpx;
  color: #6d7b8a;
}

.service-arrow {
  font-size: 40rpx;
  color: #b5c0cb;
  margin-left: 14rpx;
}

/* 公告/亮点 */
.highlight-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.highlight-card {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  background: linear-gradient(145deg, #ffffff, #f3f7fb);
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(31, 42, 68, 0.04);
  border: 1rpx solid #e8edf2;
}

.highlight-tag {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: #e8f8f0;
  color: #0ca8a8;
  font-size: 22rpx;
  font-weight: 600;
}

.highlight-body {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.highlight-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2a44;
}

.highlight-content {
  font-size: 24rpx;
  color: #6d7b8a;
  line-height: 1.6;
}